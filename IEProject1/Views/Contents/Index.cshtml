@model IEnumerable<IEProject1.Models.Content>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Semantic.cshtml";
}


<body>
    <!-- Following Menu -->
    <div class="ui large top fixed hidden menu">
        <div class="ui container">
            <a class="active item">Home</a>
            <a class="item">Sports</a>
            <a class="item">Music</a>
            <a class="item">EGames</a>
            <a class="item">Photography</a>
            @*<div class="right menu">
                    <div class="item">
                        <a class="ui button">Log in</a>
                    </div>
                    <div class="item">
                        <a class="ui primary button">Sign Up</a>
                    </div>
                </div>*@
        </div>
    </div>


    <div class="pusher" style="height:100%">
        <div class="ui inverted vertical masthead center aligned segment">
            <div class="ui container">
                <div class="ui large secondary inverted pointing menu">
                    <div class="ui dropdown link item">
                        Menu
                        <div class="menu">
                            <a href="@Url.Action("Edit", "Contents", new { id= 1 })" class="item">Sports</a>
                            <a href="@Url.Action("Edit", "Contents", new { id= 2 })" class="item">Music</a>
                            <a href="@Url.Action("Edit", "Contents", new { id= 3 })" class="item">EGames</a>
                            <a href="@Url.Action("Edit", "Contents", new { id= 4 })" class="item">Culture</a>
                            <a href="@Url.Action("Create", "Contents")" class="item">Statistics</a>
                            @*<a href="@Url.Action("Details", "Contents")" class="item">Table</a>*@
                        </div>
                    </div>
                    @*<div class="right item">
                            <a class="ui inverted button">Log in</a>
                            <a class="ui inverted button">Sign Up</a>
                        </div>*@
                </div>
            </div>

            <div class="ui text container" style="padding-top:130px">
                <h1 class="ui inverted header">
                    Head Start
                </h1>
                <h2>Do whatever you want when you want to.</h2>
                @*<div class="ui huge primary button" href="@Url.Action("Index", "Content")">See Activities<i class="right arrow icon"></i></div>*@
            </div>
        </div>
    </div>

    <div class="ui vertical stripe segment">
        <div class="ui text container">
            <h1 class="ui header">See the most popular activities</h1>
            <h2>There are different kinds of activities that you can participate in. The following are the top eight most popular activies.</h2>
        </div>
    </div>

    <div class="ui grid container">
        @foreach (var item in Model)
        {
            <div class="four wide column ui card">
                <div class="image">
                    <img src="~/Content/Images/@item.ImageName">
                </div>
                <div class="content">
                    <a class="header">@Html.DisplayFor(modelItem => item.ContentName)</a>
                    <div class="description">
                        @Html.DisplayFor(modelItem => item.Comment)
                    </div>
                </div>
                <div class="extra content">
                    <a>
                        <i class="user icon"></i>
                        The popularity of this activity is: @Html.DisplayFor(modelItem => item.Popularity)
                    </a>
                </div>
            </div>
        }
    </div>


    <div name="FieldChoose" class="ui vertical stripe segment">
        <div class="ui text container">
            <h1 class="ui header">Choose fields you like</h1>
            <h2>Now let's start and choose your favourite fiels and see some interesting activies.</h2>
        </div>
    </div>

    <div class="ui grid container">
        <div class="ui internally celled grid">
            <div class="row">
                <div class="eight wide column">
                    @*<img src="~/Content/Images/sports.jpg">*@
                    <a href="@Url.Action("Edit", "Contents", new { id= 1 })" class="links">
                        <img src="@Url.Content("~/Content/Images/sports.jpg")">
                    </a>

                </div>
                <div class="eight wide column">
                    @*<img src="~/Content/Images/Music.jpg">*@
                    <a href="@Url.Action("Edit", "Contents", new { id= 2 })" class="links">
                        <img src="@Url.Content("~/Content/Images/Music.jpg")">
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="eight wide column">
                    @*<img src="~/Content/Images/egames.jpg">*@
                    <a href="@Url.Action("Edit", "Contents", new { id= 3 })" class="links">
                        <img src="@Url.Content("~/Content/Images/egames.jpg")">
                    </a>
                </div>
                <div class="eight wide column">
                    @*<img src="~/Content/Images/photography.jpg">*@
                    <a href="@Url.Action("Edit", "Contents", new { id= 4 })" class="links">
                        <img src="@Url.Content("~/Content/Images/photography.jpg")">
                    </a>
                </div>
            </div>
        </div>
    </div>

</body>