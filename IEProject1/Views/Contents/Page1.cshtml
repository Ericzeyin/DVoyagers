<body id="page-top">

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="#page-top" style="padding-left:0px; padding-top:11px;"> <i class="home icon"></i> NewVics</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#about"> <i class="info circle icon"></i> About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#trends"> <i class="quote right icon"></i> Trends</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#interests"> <i class="heart outline icon"></i> My interests</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <header class="cover-image">
        <div class="container text-center">
            <h1 class="cover-text">Head start your new life!</h1>
        </div>
    </header>

    <section id="about" style="padding-top: 35px; padding-bottom: 15px;">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>About this page</h2>
                    <p class="lead">We will help you to headstart your journey in this city!</p>
                    <ul>
                        <li>Know the trending topics, so you are always on top of discussions</li>
                        <li>Discover things much easier</li>
                        <li>Meet like minded people</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <section id="trends" class="bg-light" style="padding-top: 25px; padding-bottom: 25px;">
        <div class="ui center aligned text container">
            <h2>Current Trends</h2>
            <p>This will let you know current trending topics</p>
        </div>
        <div class="ui grid container" style="margin-top: 20px;">
                <div class="ui four cards">
                    @foreach (var item in (IEnumerable<IEProject1.Controllers.Trend>)ViewData["trends"])
                    {
                        <div class="card">
                            <div class="content" style="text-align:center">
                                <div class="header">@item.Name</div>
                            </div>
                            <div class="ui bottom attached button">
                                <i class="arrow alternate circle right icon"></i>
                                <a href="@item.Url">Go to Twitter</a>
                            </div>
                        </div>
                    }
            </div>
        </div>
    </section>

    <section id="interests" style="padding-top: 25px; padding-bottom: 25px;">
        <div class="ui center aligned text container">
            <h2>Choose your area of interest</h2>
            <p>This will help you to meet like minded people</p>
        </div>
        <div class="ui centered grid" style="margin-top: 20px;">
            <div class="four column centered row">
                <div class="column">
                    <a href="@Url.Action("Index", "Places")" class="ui large rounded image">
                        <img src="@Url.Content("~/Content/Images/sports.jpg")">
                    </a>
                </div>
                <div class="column">
                    <a href="@Url.Action("Index", "RPlaces")" class="ui large rounded image">
                        <img src="@Url.Content("~/Content/Images/religion.jpg")">
                    </a>
                </div>
            </div>
            <div class="four column centered row">
                <div class="column">
                    <a href="@Url.Action("Index", "Ylaces")" class="ui large rounded image">
                        <img src="@Url.Content("~/Content/Images/yoga.jpg")">
                    </a>
                </div>
                <div class="column">
                    <a href="@Url.Action("Details", "Places")" class="ui large rounded image">
                        <img src="@Url.Content("~/Content/Images/food.jpg")">
                    </a>
                </div>
            </div>
        </div>
    </section>

    @*<!-- Footer -->
