@model IEnumerable<IEProject1.Models.Content>

@{
    Layout = "~/Views/Shared/_Layout_Semantic.cshtml";
}
<!DOCTYPE html>
<html lang="en">

    <head>
        <title>Homepage</title>
    </head>

    <body id="page-top">

        <!-- Navigation -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
            <div class="container">
                <a class="navbar-brand js-scroll-trigger" href="#page-top" style="padding-left:0px; padding-top:11px;">
                    <i class="home icon"></i>
                    NewVics
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="#trends"> <i class="quote right icon"></i> Trends</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="#interests"> <i class="user icon"></i> My Interests</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link js-scroll-trigger" href="#about"> <i class="info circle icon"></i> About</a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </nav>

        <header style="padding-top: 0px; overflow: hidden; height: 60%;">
            <img src="~/Content/Images/cover1_1.jpg" style=" width: 100%;" />
            <h1 style="position: absolute; top: 20%; left: 36%; font-style: italic;">Head start your new life!</h1>
            <h5 style="position: absolute; top: 27%; left: 29%;">Scroll below to know about recent trends and follow the activities you like</h5>
        </header>


        <section id="trends" class="bg-light" style="padding-top: 25px; padding-bottom: 25px;">
            <div class="ui center aligned text container">
                <h2>Current Trends</h2>
                <p>This will let you know current trending topics</p>
            </div>
            <div class="ui grid container" style="margin-top: 20px;">
                <div class="ui four cards">
                    @foreach (var item in (IEnumerable<IEProject1.Controllers.Trend>)ViewData["trends"])
                    {
                        <div class="card">
                            <div class="content" style="text-align:center">
                                <div class="header">@item.Name</div>
                            </div>
                            <div class="ui bottom attached button">
                                <i class="arrow alternate circle right icon"></i>
                                <a href="@item.Url" target="_blank">Go to Twitter</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="ui center aligned text container" style="padding-top:3%">
                <p>Do you want to see some statistic for some activities? Click here.</p>
                <div class="ui huge button" style="color:white">
                    <a href="@Url.Action("Create", "Contents")">See statistics</a>
                </div>
            </div>
        </section>

        <section id="interests" style="padding-top: 25px; padding-bottom: 25px;">
            <div class="ui center aligned text container">
                <h2>Choose your area of interest</h2>
                <p>This will help you to meet like minded people</p>
            </div>
            <div class="ui centered grid" style="margin-top: 20px;">
                <div class="four column centered row">
                    <div class="column">
                        <a href="@Url.Action("Index", "Places")" class="ui large rounded image">
                            <img src="@Url.Content("~/Content/Images/sports.jpg")">
                        </a>
                    </div>
                    <div class="column">
                        <a href="@Url.Action("Index", "RPlaces")" class="ui large rounded image">
                            <img src="@Url.Content("~/Content/Images/religion.jpg")">
                        </a>
                    </div>
                </div>
                <div class="four column centered row">
                    <div class="column">
                        <a href="@Url.Action("Index", "YPlaces")" class="ui large rounded image">
                            <img src="@Url.Content("~/Content/Images/yoga.jpg")">
                        </a>
                    </div>
                    <div class="column">
                        <a href="@Url.Action("Details", "Places")" class="ui large rounded image">
                            <img src="@Url.Content("~/Content/Images/food.jpg")">
                        </a>
                    </div>
                </div>
            </div>
        </section>

    </body>
</html>