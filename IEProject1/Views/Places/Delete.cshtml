@model IEnumerable<IEProject1.Models.Place>

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout_Semantic.cshtml";
}

<title>Outdoor Activity</title>


<style>

    .first {
        width: 73%;
        float: left;
        height: 100%;
        /*border: 1px solid #3B6273;*/
    }

    .second {
        width: 27%;
        float: left;
        height: 100%;
        /*border: 1px solid #3B6273;*/
    }
</style>


<fieldset>
    <div class="first">
        <fieldset style="padding-top:5%">
            <div class="ui vertical stripe quote segment" style="background-color:#414c56">
                <div class="ui equal width stackable internally celled grid">
                    <div class="center aligned row">
                        <div class="column" style="color:white">
                            <h2>Popular outdoor activityies</h2>
                            <p>Please click picture to see more information.</p>
                        </div>
                    </div>
                </div>
            </div>
            <style type="text/css">
                body, img, span, ul, li {
                    margin: 0;
                    padding: 0;
                }

                #div1 {
                    width: 750px;
                    height: 440px;
                    margin: 10px auto;
                    border: 10px solid #eee;
                    position: relative;
                }

                img {
                    width: 750px;
                    height: 440px;
                }

                span#L:hover {
                    background: rgba(255,255,255,.5);
                    color: black;
                    transform: scale(1.3);
                }

                span#R:hover {
                    background: rgba(255,255,255,.5);
                    color: black;
                    transform: scale(1.3);
                }

                span#L {
                    left: 10px;
                    top: 250px;
                    display: inline-block;
                    position: absolute;
                    width: 50px;
                    height: 50px;
                    border-radius: 25px;
                    background: rgba(0,0,0,.3);
                    font-size: 30px;
                    line-height: 50px;
                    text-align: center;
                    cursor: pointer;
                    color: white;
                }

                span#R {
                    right: 10px;
                    top: 250px;
                    display: inline-block;
                    position: absolute;
                    width: 50px;
                    height: 50px;
                    border-radius: 25px;
                    background: rgba(0,0,0,.3);
                    font-size: 30px;
                    line-height: 50px;
                    text-align: center;
                    cursor: pointer;
                    color: white;
                }

                #div1 #ul {
                    position: absolute;
                    bottom: 10px;
                    left: 320px;
                    width: 125px;
                    height: 20px;
                }

                    #div1 #ul li {
                        list-style: none;
                        float: left;
                        height: 20px;
                        width: 20px;
                        border-radius: 10px;
                        background: rgba(255,255,255,.5);
                        margin-right: 5px;
                        cursor: pointer;
                    }

                    #div1 #ul .active {
                        background: rgba(0,0,0,.5);
                    }
            </style>
            <div id="div1">
                <a href="" target="_blank">
                    <img src="" alt="">
                </a>
                <span id="L"><</span>
                <span id="R">></span>
                <ul id="ul">
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
            </div>
            <script type="text/javascript">
                window.onload = function () {
                    var div1 = document.getElementById('div1');
                    var oImg = div1.getElementsByTagName('img')[0];
                    var oa = div1.getElementsByTagName('a')[0];
                    var spanL = document.getElementById('L');
                    var spanR = document.getElementById('R');
                    var oUl = document.getElementById('ul');
                    var oLi = oUl.getElementsByTagName('li');
                    var arrImg = ['../Content/Images/out1.jpg', '../Content/Images/out2.jpg', '../Content/Images/out3.jpg'];
                    var urlImg = ['@Url.Action("Hiking", "Places")', '@Url.Action("Fishing", "Places")', '@Url.Action("Clambing", "Places")'];
                    var num = 0;
                    var oldLi = 0;
                    function fn(num) {
                        oImg.src = arrImg[num];
                        oa.href = urlImg[num];
                    }
                    fn(0);
                    function fnLi(num) {
                        oLi[oldLi].className = '';
                        oLi[num].className = 'active';
                        oldLi = num;
                    }
                    fnLi(0);

                    spanL.onclick = function () {
                        if (num < 1) {
                            num = arrImg.length - 1;
                            fn(num);
                            fnLi(num);
                        } else {
                            num--;
                            fnLi(num);
                            fn(num);
                        }
                    }
                    spanR.onclick = function () {
                        if (num == arrImg.length - 1) {
                            num = 0;
                            fn(num);
                            fnLi(num);
                        } else {
                            num++;
                            fnLi(num);
                            fn(num);
                        }
                    }                  

                    for (var i = 0; i < oLi.length; i++) {
                        oLi[i].index = i;
                        oLi[i].onclick = function () {
                            fn(this.index);
                            fnLi(this.index);
                        }
                    }
                }
            </script>

        </fieldset>

        <fieldset id="fs1" style="display:block">
            <div class="ui vertical stripe quote segment">
                <div class="ui equal width stackable internally celled grid">
                    <div class="center aligned row">
                        <div class="column">
                            <h2>Hiking</h2>
                            <p>You can see popular tweets from here.</p>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>

      
       

   

    </div>

    <div class="second">
        <fieldset style="padding-top:14%">
            <div class="ui vertical stripe quote segment" style="background-color:#414c56">
                <div class="ui equal width stackable internally celled grid">
                    <div class="center aligned row">
                        <div class="column" style="color:white">
                            <h2>Newsfeed</h2>
                            <p>You can see popular tweets from here.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="ui grid container" style="padding-top:5%;padding-bottom:4%">
                <div class="ui centered cards">
                    @foreach (var item in (IEnumerable<IEProject1.Controllers.Stwitter>)ViewData["sportsTwitter"])
                    {
                        <div class="card">
                            <div class="content">
                                <img class="right floated mini ui image" src="@item.Profile_image_url">
                                <div class="header">
                                    @item.Screen_name
                                </div>
                                <div class="meta">
                                    Popular twitters
                                </div>
                                <div class="description">
                                    @item.Text
                                </div>
                            </div>
                            <div class="extra content">
                                <span class="right floated user circle">
                                    @item.Followers_count followers
                                </span>
                                <span>
                                    <i class="user icon"></i>
                                    @item.Friends_count Friends
                                </span>
                            </div>
                            <div class="extra content">
                                @if (item.Url != null)
                                {
                                    <div class="ui button"> <a href="@item.Url" target="_blank">Find more details</a></div>
                                }
                                else
                                {
                                    <div class="ui button"> <a href="https://dvoyagers.azurewebsites.net" target="_blank">Find more details</a></div>
                                }
                            </div>
                        </div>
                    }

                </div>
            </div>
        </fieldset>

    </div>

</fieldset>

